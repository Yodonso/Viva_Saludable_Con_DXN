<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2"> Productos</h3>

        {{#if productos}}

            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-2"> Nombre     </th>
                        <th scope="col"> Imagen        </th>
                        <th scope="col"> Precio        </th>
                        <th scope="col"> Oferta         </th>
                        <th scope="col"> stop           </th>
                        <th scope="col" class="col-4"> Descripcci√≥n   </th>
                        <th scope="col"> Categoria      </th>
                    </tr>
                </thead>
                <tbody>

                    {{#each productos }}
                        <tr>
                            <td> {{name}} </td>
                            <td>
                                <img src="/uploads/{{imagen}}" class="card-img-top mx-auto m-2" style="width: 150px; height: 150px;display:block;">
                            </td>
                            <td> {{precio}} </td>
                            <td> {{oferta}} </td>
                            <td> {{stop}} </td>
                            <td> {{descripcion}} </td>
                            <td> {{categoria}} </td>                          

                            <td> 
                                <div class="btn-group">
                                    <a href="/edit/{{id}}" class="btn btn-warning p-2">
                                        <i class="fa-solid fa-pencil"></i>
                                    </a>
                                    <a href="/delete/{{id}}" class="btn btn-danger p-2">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}

                </tbody>
            </table>

        {{else}}

            <div class="card text-center mx-auto">
                <div class="card-header">
                    <h3> Debes crear Productos</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este boton para que puedas crear un producto en la aplicacion</p>
                    <a href="/add" class="btn btn-primary"> Ir a crear</a>
                </div>
            </div>

        {{/if}}

    </div>
</div>