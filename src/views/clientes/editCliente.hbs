<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-upercase">Editar Productos</h3>
                </div>
                <div class="card-body">
                    <form action="/editCliente/{{clientes.id}}" method="post"> 

                        <div class="input-group mt-2">
                            <label for="nombre" class="input-group-text"> Nombre</label>
                            <input class="form-control" type="text" name="nombre" id="nombre" placeholder="Nombre" value="{{clientes.nombre}}" autofocus required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="apellido" class="input-group-text"> Apellido </label>
                            <input class="form-control" type="text" name="apellido" id="apellido" placeholder="Apellido" value="{{clientes.apellido}}" autofocus required >
                        </div>
                        

                        <div class="input-group mt-2">
                            <label for="telefono" class="input-group-text"> telefono </label>
                            <input class="form-control" type="number" name="telefono" id="telefono" placeholder="0" value="{{clientes.telefono}}" autofocus required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="email" class="input-group-text"> Correo electronico </label>
                            <input class="form-control" type="text" name="email" id="email" placeholder="Correo electronico" value="{{clientes.email}}" autofocus required >
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Actualizar </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>