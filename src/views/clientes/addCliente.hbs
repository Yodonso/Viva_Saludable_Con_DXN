<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-upercase">Crear un nuevo cliente</h3>
                </div>
                <div class="card-body">
                    <form action="/addCliente" method="post">

                        <div class="input-group mt-2">
                            <label for="nombre" class="input-group-text"> Nombre del cliente </label>
                            <input class="form-control" type="text" name="nombre" id="nombre" placeholder="Ejemplo: Nombre" autofocus required ></input>
                        </div>

                        <div class="input-group mt-2">
                            <label for="apellido" class="input-group-text"> apellido </label>
                            <input class="form-control" type="text" name="apellido" id="apellido" placeholder="Ejemplo: Apellido" autofocus required ></input>
                        </div>

                        <div class="input-group mt-2">
                            <label for="telefono" class="input-group-text"> N° telefonico </label>
                            <input class="form-control" type="number" name="telefono" id="telefono" placeholder="N° telefonico" autofocus required ></input>
                        </div>
                                                
                        <div class="input-group mt-2">
                            <label for="email" class="input-group-text"> Email </label>
                            <input class="form-control" type="text" name="email" id="email" placeholder="correo electronico" autofocus required ></input>
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Crear nuevo cliente</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>