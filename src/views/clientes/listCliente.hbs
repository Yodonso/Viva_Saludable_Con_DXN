<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2"> Crear nuevo cliente</h3>

        {{#if cliemtes}}

            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-2"> Nombre     </th>
                        <th scope="col"> Apellido        </th>
                        <th scope="col"> Telefono         </th>
                        <th scope="col"> Email          </th>
                    </tr>
                </thead>
                <tbody>

                    {{#each cliemtes}}
                        <tr>
                            <td> {{nombre}} </td>
                            <td> {{apellido}} </td>
                            <td> {{telefono}} </td>
                            <td> {{email}} </td>
                            <td> 
                                <div class="btn-group">
                                    <a href="/editCliente/{{id}}" class="btn btn-warning p-2">
                                        <i class="fa-solid fa-pencil"></i>
                                    </a>
                                    <a href="/delete/{{id}}" class="btn btn-danger p-2">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}

                </tbody>
            </table>

        {{else}}

            <div class="card text-center mx-auto">
                <div class="card-header">
                    <h3> Debes crear Productos</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este boton para que puedas crear un producto en la aplicacion</p>
                    <a href="/addCliente" class="btn btn-primary"> Ir a crear</a>
                </div>
            </div>

        {{/if}}

    </div>
</div>